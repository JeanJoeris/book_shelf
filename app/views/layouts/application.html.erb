<!DOCTYPE html>
<html>
  <head>
    <title>BookShelf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |name, message| %>
      <%= content_tag :div, message, class: "flash_#{name}" %>
    <% end %>
    <p>
    </p>
    <% if current_user %>
      <p>
        The current user is <strong><%= current_user.username %></strong> <br />
        <strong>Newest Book: <%= most_recent_book.title %></strong>
      </p>
    <% end %>
    <%= yield %>
    <% if current_user %>
      <%= link_to "Logout", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
  </body>
</html>
