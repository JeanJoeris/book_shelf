<div class="book_info">
  <h2><%= @book.title %></h2>

  <p>
    Price: $<%= @book.price %>
  </p>

  <p>
    Quantity: <%= @book.quantity %>
  </p>
  <% if @book.user %>
    <p>
      This book belongs to <%= @book.user.username %>
    </p>
  <% end %>
</div>
<h3><%= link_to "Edit Book Properties", edit_book_path(@book) %></h3>
<h3><%= link_to "Burn the Book (you monster)", book_path(@book), method: :delete %></h3>
<h3><%= link_to "Back to Books", books_path %></h3>
